{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@cn": ["libs/cn.ts"]
    },
    "strictNullChecks": true,
    "types": [
      "vitest/globals",
      "@testing-library/react",
      "@testing-library/jest-dom",
      "@testing-library/user-event"
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/editor/timeline-list",
    "components/editor/workspace/workspacce-navigationtsx"
  ],
  "exclude": ["node_modules"]
}
